{
    "env": {
        "commonjs": true,
        "es2020": true,
		"node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
		"no-var": [
			"warn"
		],
		"strict": [
			"error"
		],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-global-assign": "off",
		"eqeqeq": "off",
		"no-unused-vars": "warn"
    }
}
