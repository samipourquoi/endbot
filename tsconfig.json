{
	"complieOnSave": true,
	"compilerOptions": {
		"outDir": "./dist",
		"module": "es2020",
		"moduleResolution": "node",
		"target": "es2020",
		"strict": true,
		"alwaysStrict": true,
		"sourceMap": true,
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"incremental": true,
		"skipLibCheck": true,
		"composite": true,
		"resolveJsonModule": true
	},
	"include": ["**/*"],
	"exclude": ["node_modules", "dist"]
}
